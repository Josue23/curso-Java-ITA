// esta classe é usada somente na forma de Orientação a Objetos 
public class Aluno {

    // bimestres
    int bim1;
    int bim2;
    int bim3;
    int bim4;

    // método que calcula média do aluno
    public int media() {
        int total = 0;
        total += bim1;
        total += bim2;
        total += bim3;
        total += bim4;
        return total / 4;
    }

    // método que retorna um boolean se o aluno passou de ano
    public  boolean passouDeAno() {
        if (media() >= 60)
            return true;
        return false;
    }

}

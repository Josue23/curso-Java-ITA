
public class Aluno {

    // bimestres
    int bim1;
    int bim2;
    int bim3;
    int bim4;
    
    // método que calcula média do aluno
    public static int media(Aluno a) {
        int total = 0;
        total += a.bim1;
        total += a.bim2;
        total += a.bim3;
        total += a.bim4;
        return total / 4;
    }

}

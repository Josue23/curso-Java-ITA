
public class VerificadoraNotas {

    // mÃ©todo que calcula mÃ©dia do aluno
    public static int mediaAluno(Aluno a) {
        int total = 0;

        total += a.bim1;
        total += a.bim2;
        total += a.bim3;
        total += a.bim4;

        return total / 4;
    }

    // mÃ©todo que retorna um boolean se o aluno passou de ano
    public boolean passouDeAno(Aluno a) {
        int media = mediaAluno(a);
        if (media >= 60)
            return true;
        return false;
    }
}
